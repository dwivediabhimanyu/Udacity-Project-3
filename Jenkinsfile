pipeline {
    agent any
    stages {
        stage('Lint HTML') {
            steps {
                sh 'echo Linting HTML'
                sh 'tidy -q -e *.html'
            }
        }
                stage('Build') {
            steps {
                sh 'echo Linting HTML'
                sh 'tidy -q -e *.html'
            }

        }
                stage('Deploy') {
            steps {
                sh 'echo Linting HTML'
                sh 'tidy -q -e *.html'
            }

        }
    }
}
